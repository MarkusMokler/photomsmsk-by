@using PhotoMSK.Extensiolns
@model PhotoMSK.Areas.Default.ViewData.Catalog.VitrineViewData
<div class="uk-grid uk-grid-small">
    <div class="uk-width-2-3">
        <div class="uk-grid uk-grid-small" data-uk-grid-margin>
            <div class="uk-width-1-1">
                <div class="uk-panel uk-panel-box">
                    <strong class="uk-h2">Фото</strong>

                    <div class="uk-flex uk-flex-wrap uk-grid-width-1-5 uk-margin-top uk-text-center" data-uk-grid-margin>
                        @foreach (var item in Model.Categorieses)
                        {
                            <div class="uk-panel uk-main-page-menu-category-item">
                                <a href="@Html.MakeUrl(Model.Route,"catalog/"+ item.Slug)" class="uk-link-reset ">
                                    <img alt="@item.Name" src="http://fotomix.by/upload/uf/0fa/tsifr-foto.png">
                                    <strong class="uk-h6">@item.Name</strong>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="uk-width-1-1">
                <div id="wall-placeholder"></div>
            </div>
        </div>
    </div>
    <div class="uk-width-1-3">
        <section class="uk-grid uk-grid-small" data-uk-grid-margin>
            <div class="uk-width-1-1">
                <div class="uk-panel uk-panel-box uk-panel-box-item">
                    <ul class="uk-list uk-list-space">
                        <li>
                            <img src="@Url.Content("/Themes/Photorent/photoprokat.by/Content/images/bg_link_matrix_clear.jpg")" class="uk-float-left" />
                            <a href="#" class="uk-link-muted">
                                <strong>Чистка матриц</strong>
                            </a>
                            <p class="uk-margin-remove uk-text-muted">И фотоаппарат как новый!</p>
                        </li>
                        <li>
                            <img src="@Url.Content("/Themes/Photorent/photoprokat.by/Content/images/bg_link_childschool.png")" class="uk-float-left" />
                            <a href="#" class="uk-link-muted">
                                <strong>Детские медиа мастерские</strong>
                            </a>
                            <p class="uk-margin-remove uk-text-muted">Приучаем к прекрасному с детства</p>
                        </li>
                        <li>
                            <img src="@Url.Content("/Themes/Photorent/photoprokat.by/Content/images/bg_link_matrix_clear.jpg")" class="uk-float-left" />
                            <a href="#" class="uk-link-muted">
                                <strong>Сдавайте вашу технику в аренду</strong>
                            </a>
                            <p class="uk-margin-remove uk-text-muted">Зарабатывайте на технике!</p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="uk-width-1-1">
                <div class="uk-panel uk-panel-box uk-panel-box-item">
                    <strong class="uk-h3">ТОП-10</strong>

                    <ul class="uk-list uk-list-space uk-margin-left">
                        @if (Model.Technics != null)
                            {
                                foreach (var item in Model.Technics.Elements.Take(10))
                                {
                                    <li>
                                        <a href="@item.Url()" class="uk-link-muted">
                                            @item.Name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="uk-width-1-1">
                    <div class="uk-panel uk-panel-box uk-panel-box-item">
                        <ul class="uk-grid uk-grid-width-1-3 uk-text-center">
                            <li>
                                <a href="#" target="_blank"><img src="http://www.rentaphoto.com/img/instagramm.jpg" alt="" title=""></a>
                            </li>
                            <li>
                                <a href="#" target="_blank"><img src="http://www.rentaphoto.com/img/instagramm.jpg" alt="" title=""></a>
                            </li>
                            <li>
                                <a href="#" target="_blank"><img src="http://www.rentaphoto.com/img/instagramm.jpg" alt="" title=""></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="uk-width-1-1">
                    <div class="uk-panel uk-panel-box uk-panel-box-item">
                        <strong class="uk-h3">Партнеры</strong>

                        <div class="uk-slidenav-position uk-margin-top" data-uk-slideshow="{autoplay:true}">
                            <ul class="uk-slideshow uk-text-center">
                                <li>
                                    <a href="#" class="uk-link-reset">
                                        <img class="uk-margin uk-margin-remove" src="http://www.omicrono.com/wp-content/uploads/2012/06/Nikon-logo.jpg" title="PhotoMSK.by" alt="PhotoMSK.by">
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="uk-link-reset">
                                        <img class="uk-margin uk-margin-remove" src="http://www.bramig.com/wp-content/uploads/2013/04/canon-logo.gif" title="PhotoMSK.by" alt="PhotoMSK.by">
                                    </a>
                                </li>
                            </ul>
                            <a href="#" class="uk-slidenav uk-slidenav-previous" data-uk-slideshow-item="previous"></a>
                            <a href="#" class="uk-slidenav uk-slidenav-next" data-uk-slideshow-item="next"></a>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
