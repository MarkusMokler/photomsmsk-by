@model PhotoMSK.Areas.Default.ViewData.Catalog.VitrineViewData
<div class="uk-grid">
    <div class="uk-width-1-1">
        <ul class="uk-breadcrumb">
            <li><a href="#">Главная</a></li>
            <li><a href="#">Каталог продукции</a></li>
            <li><span><i class="uk-icon-long-arrow-right"></i></span></li>
        </ul>
    </div>
</div>

<div class="uk-grid uk-margin-small-top">
    <div class="uk-width-1-1 uk-text-center">
        <h2><strong>Зеркальные фотоаппараты</strong></h2>
    </div>
</div>

<div class="uk-grid uk-grid-small uk-margin-top-remove">
    <div class="uk-width-1-5">
        <strong class="uk-h5">Каталог продукции</strong>
        <ul class="uk-nav uk-nav-side uk-nav-parent-icon" data-uk-nav="{multiple:true}">
            @foreach (var item in Model.Categorieses)
            {
                <li class="uk-parent">
                    <a class="role-category" href="#" data-categoryid="@item.ID">@item.Name</a>
                    @if (item.Brands.Count > 0)
                    {
                        <ul class="uk-nav-sub">
                            @foreach (var ii in item.Brands)
                            {
                                <li><a data-role-brand-select data-brand-id="@ii.ID" href="#">@ii.Name</a></li>
                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    </div>
    <div class="uk-width-4-5 uk-margin-top">
        <div class="uk-grid" data-uk-grid-margin>
            @*<div class="uk-width-1-2 uk-text-left">
                            <ul class="uk-subnav uk-subnav-pill uk-subnav-pill-table-checker">
                        <li class=""><span>Сортировать по: </span></li>
                        <li class="uk-margin-remove uk-active">
                            <a class="role-filter" data-val="rating">популярности</a>
                        </li>
                        <li class="uk-margin-remove"><a class="role-filter" data-val="price">цене</a></li>
                        <li class="uk-margin-remove"><a class="role-filter" data-val="date">новизне</a></li>
                    </ul>
                </div>
            *@
            <div class="uk-width-1-1 uk-text-right uk-margin-remove">
                <ul class="uk-subnav uk-subnav-pill uk-subnav-pill-table-checker" data-uk-switcher="{connect:'#catalog-page-content', toggle:' > *:not(.uk-subnav-title)'}">
                    <li class="uk-subnav-title"><span>Вид каталога: </span></li>
                    <li class="uk-margin-remove uk-active"><a href="#"><i class="uk-icon-th"></i></a></li>
                    <li class="uk-margin-remove"><a href="#"><i class="uk-icon-list"></i></a></li>
                </ul>
            </div>
            <div class="uk-width-1-1 uk-margin-remove uk-text-right">
                <hr />
                @*<span>Страницы: </span>*@
                <ul class="uk-pagination uk-margin-remove uk-float-right role-paginator-placeholder">
                    <li><span>Страницы:</span> </li>
                    <li><a href="#page-1" data-page="0">1</a></li>
                </ul>
            </div>


            <div class="uk-width-1-1 uk-margin-remove">
                <hr />
                <ul id="catalog-page-content" class="uk-switcher">
                    <li>
                        <ul class="uk-list uk-grid-width-1-4 uk-grid-small uk-flex uk-flex-wrap role-vitrine"></ul>
                    </li>
                    <li>
                        <ul class="uk-list uk-grid-small uk-flex uk-flex-wrap role-horizontal-vitrine" data-uk-grid-margin></ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>