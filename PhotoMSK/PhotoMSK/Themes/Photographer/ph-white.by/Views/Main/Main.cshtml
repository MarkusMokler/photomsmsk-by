@model PhotoMSK.ViewModels.Route.PhotographerViewModel

<div class="uk-grid uk-margin-large-top">
    <div class="uk-width-1-1 uk-text-center">
        <img src="@Model.ImageUrl" class="uk-border-circle" alt="фотограф @Model.LastName @Model.FirstName" width="150" height="150" />
        <p class="uk-margin-bottom-remove">
            фотограф
        </p>
        <h1 class="uk-margin-top-remove">
            @Model.FirstName&nbsp;@Model.LastName
        </h1>
    </div>
</div>

<div class="uk-grid uk-grid-small">
    <div class="uk-width-1-1">
        <nav class="uk-top-menu">
            <ul class="uk-subnav uk-text-bold uk-text-center">
                <li><a href="#">Фото</a></li>
                <li><a href="#">Фотосессии</a></li>
                <li><a href="#">Отзывы</a></li>
                <li><a href="#">Стоимость</a></li>
                <li><a href="#">Обо мне</a></li>
                <li><a href="#">Контакты</a></li>
            </ul>
        </nav>
    </div>
</div>

<div class="uk-grid-width-medium-1-4" data-uk-grid="{gutter: 10}">
    @foreach (var item in Model.Shootings)
    {
        foreach(var item2 in @item.Photos)
        {
            <div>
                <a href="@item2.Url" data-uk-lightbox="{group:'group1'}" title="@item2.Title">
                    <img src="@item2.Url" alt="@item2.Title">
                </a>
            </div>
        }
    }
</div>
