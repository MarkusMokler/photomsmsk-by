@model PhotoMSK.ViewModels.Route.PublicViewModel

@section Footer
{
    @Html.Partial("~/Themes/Page/photocollege.by/Views/Footer/Footer.cshtml")
}
@section scripts
{
    <script>
        App.owner = '@Model.ID';

        $(function () {

            var photocollege = window.PublicDetails.extend(
                {
                    yaParams: {
                        order_id: guid(),
                        order_price: 600000,
                        currency: "BUR",
                        exchange_rate: 1
                    },
                    initialize: function () {
                        var self = this;
                        $("[data-role-dialog]").on({
                            'show.uk.modal': function () {
                                yaCounter29029505.reachGoal("showdialog", self.yaParams);
                            }
                        });
                        photocollege.__super__.initialize.call(this);
                    },
                    sendRequest: function () {
                        yaCounter29029505.reachGoal('submitdialog', this.yaParams);
                        photocollege.__super__.sendRequest.call(this);
                    }
                });
            new photocollege().render();
        });
    </script>
}

