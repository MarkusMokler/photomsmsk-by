@{
    ViewBag.Title = "Рейтинг пользователей";
}

<div class="uk-container uk-container-center">
    <div class="uk-grid pad-top-40">
        <div class="uk-width-2-3">
            <ul class="uk-subnav uk-subnav-switch-button uk-subnav-pill uk-subnav-line" data-uk-switcher="{connect:'#my-id'}">
                <li><button class="uk-button uk-active">Все</button></li>
                <li><button class="uk-button">Фотографы</button></li>
                <li><button class="uk-button">Модели</button></li>
                <li><button class="uk-button">Визажисты</button></li>
                <li><button class="uk-button">Парикмахеры</button></li>
            </ul>
        </div>
        <div class="uk-width-1-3">
            <form class="uk-search uk-search-large" data-uk-search="{source:'my-results.json'}">

                <input class="uk-search" type="search" placeholder="Поиск...">

                <!-- This is the dropdown, which is injected through JavaScript -->
                <div class="uk-dropdown uk-dropdown-search">
                    <ul class="uk-nav uk-nav-search">...</ul>
                </div>

            </form>
        </div>
    </div>
    <div class="uk-grid">
        <div class="uk-width-1-1">
            <table class="uk-table uk-table-statistics uk-table-hover uk-table-condensed">
                <thead>
                    <tr class="uk-text-center">
                        <th class="uk-text-left">Имя</th>
                        <th>позиция</th>
                        <th>+/-</th>
                        <th>рейтинг</th>
                        <th>телефон</th>
                        <th>тип</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 30; i++)
                    {
                        <tr>
                            <td class="uk-text-left">
                                <div class="uk-vertical-align">
                                    <div class="uk-vertical-align-middle">
                                        <img src="https://pp.vk.me/c322420/v322420002/59ac/K9Wk902WYAo.jpg" width="30" height="30" class="uk-border-circle uk-margin-small-right">
                                        <a href="#" class="uk-link-muted uk-link-dotted">Лунцевич Роман</a>
                                    </div>
                                </div>
                            </td>
                            <td>3 150</td>
                            <td class="green-color"><i class="icon-arrow-up"></i> <b>15</b></td>
                            <td>154.75</td>
                            <td><small class="uk-text-muted">+375-(29)</small>-<strong>600-00-00</strong></td>
                            <td><i class="icon-profile-male"></i> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>