@model PhotoMSK.Data.Models.Routes.Photomodel
<div class="uk-grid">
    <div class="uk-width-1-1">
        <fieldset>
            <div class="uk-section">
                <span class="uk-section__counter">5</span>
                <span class="uk-section__title">Параметры тела</span>
            </div>
        </fieldset>

        <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-1-2">
                <label class="label-ms">Рост</label>
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Height, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1",data_role_input_optional="" })
                    <div class="input-group-addon">см.</div>
                    @Html.ValidationMessageFor(model => model.Height)
                </div>
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Вес</label>
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Weight, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                    <div class="input-group-addon">кг.</div>
                    @Html.ValidationMessageFor(model => model.Weight)
                </div>
            </div>
            <div class="uk-width-1-4">
                <label class="label-ms">Грудь</label>
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Chest, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                    <div class="input-group-addon">см.</div>
                    @Html.ValidationMessageFor(model => model.Chest)
                </div>
            </div>
            <div class="uk-width-1-4">
                <label class="label-ms">Талия</label>
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Waist, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                    <div class="input-group-addon">см.</div>
                    @Html.ValidationMessageFor(model => model.Waist)
                </div>
            </div>
            <div class="uk-width-1-4">
                <label class="label-ms">Бедра</label>
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Hips, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                    <div class="input-group-addon">см.</div>
                    @Html.ValidationMessageFor(model => model.Hips)
                </div>
            </div>
            @*<div class="uk-width-1-2">
                    <label class="label-ms">Размер груди</label>
                    @Html.TextBoxFor(model => model.Chest, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1")
                    @Html.ValidationMessageFor(model => model.Chest)
                </div>*@
        </div>
