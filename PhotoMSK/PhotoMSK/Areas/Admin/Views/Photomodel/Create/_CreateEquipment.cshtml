        <fieldset>
            <div class="uk-section">
                <span class="uk-section__counter">6</span>
                <span class="uk-section__title">Голова</span>
            </div>
        </fieldset>

        <div class="uk-grid">
            <div class="uk-width-1-2">
                <label class="label-ms">Длина волос</label>
                @Html.TextBoxFor(model => model.HairLength, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.HairLength)
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Цвет волос</label>
                <div class="select-style">
                    <select class="input-ms uk-width-1-1" name="HairColor" id="HairColor" data-role-input-optional>
                        <option value="" selected="selected" disabled="disabled">Цвет волос:</option>
                        <option value="Blond">Blond</option>
                        <option value="Shoten">Shoten</option>
                        <option value="Black">Black</option>
                    </select>
                </div>
                @*<label class="label-ms">Цвет волос</label>
                @Html.TextBoxFor(model => model.HairColor, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.HairColor)*@
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Цвет глаз</label>
                <div class="select-style">
                    <select class="input-ms uk-width-1-1" name="EyesColor" id="EyesColor" disabled data-role-input-optional>
                        <option value="" selected="selected" disabled="disabled">Цвет глаз:</option>
                        <option value="White">White</option>
                        <option value="Metis">Metis</option>
                        <option value="Niger">Black</option>
                    </select>
                </div>
                @*<label class="label-ms">Цвет глаз</label>
                @Html.TextBoxFor(model => model.EyesColor, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.EyesColor)*@
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Цвет кожи</label>
                <div class="select-style">
                    <select class="input-ms uk-width-1-1" name="SkinColor" id="SkinColor"  data-role-input-optional>
                        <option value="" selected="selected" disabled="disabled">Цвет кожи:</option>
                        <option value="White">White</option>
                        <option value="Metis">Metis</option>
                        <option value="Niger">Black</option>
                    </select>
                </div>
                @*<label class="label-ms">Тип лица</label>
                @Html.TextBoxFor(model => model.FaceType, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.FaceType)*@
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Тип лица</label>
                <div class="select-style">
                    <select class="input-ms uk-width-1-1" name="FaceType" id="FaceType" disabled data-role-input-optional>
                        <option value="" selected="selected" disabled="disabled">Тип лица:</option>
                        <option value="White">White</option>
                        <option value="Metis">Metis</option>
                        <option value="Niger">Black</option>
                    </select>
                </div>
            </div>
        </div>

        <fieldset>
            <div class="uk-section">
                <span class="uk-section__counter">7</span>
                <span class="uk-section__title">Параметры</span>
            </div>
        </fieldset>
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <label class="label-ms">Размер одежды</label>
                @Html.TextBoxFor(model => model.ClothingSize, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.ClothingSize)
            </div>
            <div class="uk-width-1-2">
                <label class="label-ms">Размер обуви</label>
                @Html.TextBoxFor(model => model.ShoesSize, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_optional = "" })
                @Html.ValidationMessageFor(model => model.ShoesSize)
            </div>
        </div>

    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-2 uk-text-center">
        <button class="uk-button" data-role-prev-step>Назад</button>
    </div>
    <div class="uk-width-1-2 uk-text-center">
        <a href="#" class="uk-button uk-button-next-step" data-role-next-step>Продолжить</a>
    </div>
</div>
