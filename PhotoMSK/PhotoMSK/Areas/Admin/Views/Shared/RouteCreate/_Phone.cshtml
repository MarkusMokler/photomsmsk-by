@* Телефон *@
<section class="uk-width-1-1">
    <div class="uk-section">
        <span class="uk-section__counter">3</span>
        <span class="uk-section__title">Телефон</span>
    </div>

    <div class="uk-grid">
        <div class="uk-width-1-3 uk-push-1-3">
            <div class="uk-form-row">
                <label class="label-ms">Введите ваш номер телефона <i class="icon-help green-color" data-uk-tooltip title="На этот номер придет СМС с проверочным кодом."></i></label>
                <div class="uk-form-controls">
                    @Html.TextBox("id", "", new { @class = "uk-width-1-1 uk-text-bold input-ms", id = "mobile-number", type = "tel", data_role_phone_number = "" })
                    <button class="uk-form-button-small uk-button uk-button-success uk-margin-left uk-button-large" data-role-send-to-validate>Отправить</button>
                </div>
            </div>
        </div>
    </div>
</section>