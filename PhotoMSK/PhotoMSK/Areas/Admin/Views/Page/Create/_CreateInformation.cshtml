@model PhotoMSK.Data.Models.Routes.Page

<div class="uk-grid" data-uk-grid-margin>

    <div class="uk-width-1-1">
        <section class="uk-margin-remove">
            <div class="uk-section">
                <span class="uk-section__counter">1</span>
                <span class="uk-section__title">Загрузка логотипа</span>
            </div>

            <div class="form-banner">
                <div class="form-banner__cover">
                    <div id="role-cover">
                        <img class="uk-border-rounded" src="@Url.Content("~/Content/images/no-cover-image.jpg")" alt="Ковер публичной страницы">
                    </div>
                    <div class="form-banner__button-cover form-banner__button--border uk-link-reset">
                        <a id="role-change-cover" href="#">Изменить обложку</a>
                    </div>
                </div>
                <div class="form-banner__avatar">
                    <div id="role-avatar" class="form-banner__relation">
                        <img class="uk-border-circle uk-border-white" src="@Url.Content("~/Content/images/no-avatar.png")" width="85" height="85" alt="Аватарка страницы">
                        <div class="form-banner__button">
                            <a id="role-change-avatar" class="form-banner__button-avatar form-banner__button--border uk-link-reset" href="#">Загрузить логотип</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="uk-width-1-1">
        <section>
            <div class="uk-section">
                <span class="uk-section__counter">2</span>
                <span class="uk-section__title">Информация о странице</span>
            </div>

            <div class="uk-grid">
                <div class="uk-width-1-2">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-1-1">
                            <label class="label-ms">Название страницы</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_required="", placeholder = "Название вашей страницы" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="uk-width-1-1">
                            <label class="label-ms">Короткая ссылка <i class="icon-help2" data-uk-tooltip title="Это ссылка позволит мгновенно перейти к вашей странице"></i></label>
                            <div class="input-group">
                                <div class="input-group-addon">www.photomsk.by/</div>
                                @Html.TextBoxFor(model => model.Shortcut, new { @class = "form-control input-ms uk-width-large-1-1 uk-width-small-1-1", data_role_input_required = "", placeholder = "vasha-stranica" })
                                @Html.ValidationMessageFor(model => model.Shortcut)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-2">
                    <label class="label-ms">Описание <i class="icon-help2" data-uk-tooltip title="Опишите кратко ваши преимущества"></i></label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "input-ms uk-width-large-1-1 uk-width-small-1-1", rows = 6, data_role_input_optional = "" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
        </section>
    </div>
    
    <div class="uk-width-1-1">
        <section>
            <div class="uk-section">
                <span class="uk-section__counter">3</span>
                <span class="uk-section__title">Тип страницы</span>
            </div>
            

            <div class="uk-grid">
                <div class="uk-width-1-3">
                    <label class="label-ms">Категория</label>

                    <div class="select-style">
                        <select class="select-ms uk-width-1-1" name="gender" id="settings_gender" data-role-input-optional> @*data-role-input-required*@
                            <option value="" selected="selected" disabled="disabled">Категория:</option>
                            <option value="Female">Модельное агенство</option>
                            <option value="Male">Свадебный распорядитель</option>
                            <option value="Male">Визажист</option>
                            <option value="NotApplicable">Парикмахер</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="uk-width-1-1 pad-top-40">
        <div class="uk-grid">
            <div class="uk-width-1-2 uk-text-center">
                <button class="uk-button" data-role-to-adminpanel>Назад</button>
            </div>
            <div class="uk-width-1-2 uk-text-center">
                <button class="uk-button uk-button-next-step" disabled data-role-next-step>Продолжить</button>
            </div>
        </div>
    </div>
</div>
