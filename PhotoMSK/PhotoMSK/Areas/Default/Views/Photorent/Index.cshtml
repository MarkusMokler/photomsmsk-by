@model PhotoMSK.Areas.Default.ViewData.Photorent.IndexViewData

@{
    ViewBag.Title = "Index";
    int count = 1;
}

<div class="uk-main-page-body">
    <div class="uk-page-bar-panel">
        <div class="uk-container uk-container-center">
            <ul class="uk-margin-remove uk-subnav uk-subnav-line uk-subnav-breadcrumb">
                <li><a href="~/">Главная</a></li>
                <li class="uk-active"><a href="#">Фотографы</a></li>
                <li>
                    <span>найдено <strong>@String.Format("{0:### ### ### ###}", Model.Page.Elements.Count())</strong> шт.</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="uk-container uk-container-center">
        <ul class="uk-grid">
            @foreach (var item in Model.Page.Elements)
            {
                <li class="uk-width-1-5 phototechnics-teaser">
                    <div class="short_product with_popover phototechnics-teaser-item">

                        <a href="@item.Url">
                            <img src="@item.ImageUrl">
                        </a>
                        <h3 class="uk-text-center phototechnics-teaser-title">
                            <a class="uk-link-muted" href="@item.Url">
                                @item.Name
                            </a>
                        </h3>
                    </div>
                </li>
                if (count % 5 == 0)
                {
                    Write(new HtmlString("</div><div class='uk-grid'>"));
                }
                count++;
            }
        </ul>
    </div>
</div>