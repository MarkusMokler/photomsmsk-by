@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $("#WallPost-title").on("keyup", function () {
                $("#WallPost-extends").show();
                $(this).off("keyup", this);
            });

            window.attachments = [];


            $("#WallPost-publish").click(function (date) {

                $.post("/Api/WallPost", {
                    description: $("#WallPost-description").val(),
                    title: $("#WallPost-title").val(),
                    referer: "@Model.Item.CalendarID",
                    attachments: window.attachments
                });
            });

            $('#calendar').fullCalendar({
                defaultView: 'agendaWeek',
                allDaySlot: false,
                selectable: true,
                editable: true,
                firstHour: 8,
                slotMinutes: 30,
                defaultEventMinutes: 60,
                select: function (start, end, allDay) {
                    var modal = new $.UIkit.modal.Modal("#myModal");

                    modal.show();

                    $("#save").click(function () {
                        modal.hide();
                        var title = "Занято";
                        if (title) {
                            $('#calendar').fullCalendar('renderEvent',
                                {
                                    title: title,
                                    start: start,
                                    end: end,
                                    allDay: allDay,
                                    editable: true,
                                },
                                false // make the event "stick"
                            );
                            jQuery.post("Api/Events/", {
                                title: title,
                                start: start,
                                end: end,
                                allDay: allDay
                            });
                        }
                        $('#calendar').fullCalendar('unselect');

                    });
                },
                eventSources: [
                    {
                        url: '/Api/Events',
                        type: 'GET',
                        data: {
                            calendarID: '@Model.Item.CalendarID',
                        },
                        error: function () {
                            alert('there was an error while fetching events!');
                        },
                        color: '@Model.Item.CalendarColor', // a non-ajax option
                        textColor: 'black' // a non-ajax option
                    },
                ]
            });

        });
    </script>
}

