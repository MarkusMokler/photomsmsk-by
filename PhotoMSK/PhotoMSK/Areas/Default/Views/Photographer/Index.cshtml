@using System.Globalization
@using PhotoMSK.Data.Models.Routes
@using PhotoMSK.ViewModels
@using PhotoMSK.ViewModels.Route
@model PhotoMSK.Areas.Default.ViewData.Photographer.IndexViewData

@{
    ViewBag.Title = "Index";
}

<div class="uk-main-page-body">
    <div class="uk-page-bar-panel">
        <div class="uk-container uk-container-center">
            <ul class="uk-margin-remove uk-subnav uk-subnav-line uk-subnav-breadcrumb">
                <li><a href="~/">Главная</a></li>
                <li class="uk-active"><a href="#">Фотографы</a></li>
                <li>
                    <span>найдено <strong>@String.Format("{0:### ### ### ###}", Model.Page.ItemsCount)</strong> шт.</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="uk-container uk-container-center">
        <div class="uk-grid" data-uk-grid-margin>
           
            <div class="uk-width-large-1-1 uk-visible-large uk-margin-remove">
                <nav class="uk-navbar uk-text-center">
                    <ul class="uk-tab uk-tab-events">
                        <li class="uk-active"><a href="" class="uk-navbar-nav-subtitle">ВСЕ ГОРОДА<div>@String.Format("{0:### ### ### ###}", Model.Page.ItemsCount)</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Минск<div>547</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Брест<div>132</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Гродно<div>120</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Гомель<div>99</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Витебск<div>67</div></a></li>
                        <li class="uk-disabled"><a href="" class="uk-navbar-nav-subtitle">Могилев<div>54</div></a></li>
                    </ul>
                </nav>
            </div>

            <div class="uk-width-2-10 uk-visible-large">
                <ul class="uk-nav uk-nav-menu uk-nav-side uk-nav-parent-icon">
                    <li class="uk-nav-header uk-margin-small-bottom">Жанры съемок:</li>
                    <li class="uk-active"><a href="">Все</a></li>
                    <li class="uk-nav-divider"></li>
                    <li><a href="">Свадебная</a></li>
                    <li><a href="">Студийная</a></li>
                    <li><a href="">Детская</a></li>
                    <li><a href="">Ню</a></li>
                    <li><a href="">Fashion</a></li>
                    <li><a href="">Beauty</a></li>
                    <li><a href="">Реклама</a></li>
                </ul>
            </div>

            <div class="uk-width-large-8-10 uk-width-medium-1-1 uk-width-small-1-1 pad-top-20">
                <div class="uk-grid role-photographers" data-uk-grid-margin>
                    @foreach (PhotographerViewModel.Summary item in Model.Page.Elements)
                    {
                        <div class="uk-width-large-1-3 uk-width-medium-1-3 uk-width-small-1-1">
                            <article class="post uk-panel-shadow">
                                <a href="@item.Url" class="post-image">
                                    <img class="uk-border-rounded" src="@item.CoverImageUrl">
                                </a>
                                <div class="details">
                                    <div class="actions">
                                        <a href="@item.Url" class="btn-ph btn-secondary btn-round">
                                            <span class="user-status success"></span>
                                            <img class="uk-comment-avatar uk-border-circle" src="@item.ImageUrl" width="50" height="50" alt="">
                                        </a>
                                    </div>

                                    <div data-uk-dropdown>
                                        <h3 class="uk-margin-top uk-margin-bottom-remove ">
                                            <a href="@item.Url" class="uk-link-muted"><strong>@item.LastName</strong> @item.FirstName</a>
                                        </h3>
                                        <div class="uk-dropdown uk-dropdown-center uk-dropdown-up" style="width: 400px;">
                                            <div class="uk-dropdown-popup">
                                                <div class="uk-grid">
                                                    <div class="uk-width-1-1">
                                                        <header class="uk-comment-header">
                                                            <img class="uk-comment-avatar uk-border-circle" src="@item.ImageUrl" width="50" height="50" alt="фотограф">
                                                            <h4 class="uk-comment-title">@item.LastName @item.FirstName</h4>
                                                            <div class="uk-comment-meta">
                                                                @if (item.Pro)
                                                                {
                                                                    <div class="uk-badge uk-badge-success">PRO</div>
                                                                }
                                                                фотограф
                                                                @if (item.City != null)
                                                                {
                                                                    <i class="icon-location-outline"></i>@item.City
                                                                }
                                                            </div>
                                                        </header>
                                                    </div>
                                                    <div class="uk-container">
                                                        <div class="uk-grid uk-grid-small uk-margin-top  uk-grid-width-1-3">
                                                        @for (int i = 0; i < 3; i++)
                                                        {
                                                            <div class="uk-text-center">
                                                                <a href="#">
                                                                        <img alt="" class="uk-border-rounded" src="@item.CoverImageUrl">
                                                                </a>
                                                                <p class="uk-margin-small-top">
                                                                    <a href="#" class="uk-link-muted">
                                                                        <span>Свадьба</span>
                                                                        <small class="uk-text-muted">
                                                                            от
                                                                            <span>500$</span>
                                                                        </small>
                                                                    </a>
                                                                </p>
                                                            </div>
                                                        }
                                                    </div>
                                                    </div>
                                                </div>

                                                <hr class="small-line">

                                                <footer>
                                                    <ul class="uk-subnav uk-subnav-line uk-vertical-align uk-text-right uk-margin-bottom-remove">
                                                        <li class="uk-vertical-align-middle"><a href="" class="uk-link-999"><strong>3</strong> заказа</a></li>
                                                        <li class="uk-vertical-align-middle"><a href="" class="uk-link-999"><strong>2</strong> отзыва</a></li>
                                                        <li class="uk-vertical-align-middle"><a class="uk-button uk-button-success uk-link-fff" href="#">Заказать</a></li>
                                                    </ul>
                                                </footer>
                                            </div>
                                        </div>
                                    </div>

                                    <p>
                                        @if (item.Pro)
                                        {
                                            <div class="uk-badge uk-badge-success">PRO</div>
                                        }
                                        <span class="uk-text-muted">
                                            фотограф
                                            @if (item.City != null)
                                            {
                                                <i class="icon-location-outline"></i>@item.City


                                            }
                                                    <
                                                    <
                                        </span>
                                    </p>
                                    <div class="intents">
                                        <small class="count uk-text-muted"><i class="icon-heart"></i> @String.Format("{0:##.##}", item.RaitingTotal)</small>
                                    </div>
                                </div>
                                <hr class="uk-width-small-1-1 uk-visible-small uk-margin-bottom small-line" />
                            </article>
                        </div>

                    }
                </div>
            </div>

            <div class="uk-width-1-1">
                <ul class="uk-pagination" data-uk-pagination="{pages:@Model.Page.PagesCount, itemsOnPage:@Model.Page.PageSize}">
                    @for (int i = 0; i <= Model.Page.PagesCount; i++)
                    {
                        <li><a href="@Url.Action(" index", "Photographer" , new { from=Model.Page.PageSize * i, pagesize=Model.Page.PageSize })">@i</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

    @section Scripts{

        <script type="text/javascript">
            $(function () {
                var page = new App.Photographer.PhotographerIndex();
                page.render();
            })
        </script>
    }
