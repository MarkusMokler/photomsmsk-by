@model PhotoMSK.Areas.Default.ViewData.Account._ChangePasswordPartialViewData

@*<p>Вы зашли как <strong>@User.Identity.GetUserName()</strong>.</p>*@

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h1 class="uk-text-center light">Изменить пароль</h1>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Item.OldPassword, "Старый пароль")
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Item.OldPassword, new { @placeholder = "Старый пароль" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Item.NewPassword, "Новый пароль")
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Item.NewPassword, new { @placeholder = "Новый пароль" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Item.ConfirmPassword, "Повторите пароль")
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Item.ConfirmPassword, new { @placeholder = "Повторите пароль..." })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Заменить" class="btn btn-default" />
        </div>
    </div>
}