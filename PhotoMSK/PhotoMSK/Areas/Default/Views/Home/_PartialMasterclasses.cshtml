@model IList<PhotoMSK.ViewModels.Route.MasterclassViewModel.Summary>

<ul class="uk-grid uk-grid-width-large-1-4 uk-grid-width-medium-1-4 uk-grid-width-small-1-2" data-uk-grid-margin>
    @foreach (var item in Model)
    {
        <li>
            <div class="uk-align-medium-left">
                <a href="@item.Shortcut" class="uk-link-reset">
                    <img width="65" height="65" class="uk-border-circle" alt="" src="@item.ImageUrl">
                </a>
            </div>
            <small class="uk-text-muted">
                @item.Start.Day.@item.Start.Month.@item.Start.Year @item.Start.Hour:00 (@item.Start.DayOfWeek) -  @item.End.Hour:00
            </small>
            <a href="@item.Shortcut" class="uk-link-reset">
                <p class="uk-margin-small uk-text-bold">
                    @item.Title
                </p>
            </a>
            <p class="uk-text-small uk-text-muted uk-margin-remove"><i>ведет: @item.AuthorName</i></p>
        </li>
    }
</ul>