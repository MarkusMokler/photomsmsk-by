@model PhotoMSK.Areas.Default.ViewData.Register.CreateViewData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create</title>
    </head>
    <body>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>UserInformation</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Item.FirstName, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Item.FirstName)
                            @Html.ValidationMessageFor(model => model.Item.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Item.LastName, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Item.LastName)
                            @Html.ValidationMessageFor(model => model.Item.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Item.UserPhoto, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Item.UserPhoto)
                            @Html.ValidationMessageFor(model => model.Item.UserPhoto)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </body>
</html>