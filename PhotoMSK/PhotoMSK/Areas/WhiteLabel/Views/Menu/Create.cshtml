@model PhotoMSK.Models.EditViewModel.MenuItemEditModel

<div class="uk-container uk-container-center">
    <div class="uk-grid">
        <div class="uk-width-1-5">
            <h5 class="uk-text-bold">Справочник</h5>
            <ul class="uk-list uk-list-space uk-list-dotted">
                <li><a ng-href="#" target="_blank" class="uk-link-muted" href="#">Типы меню</a></li>
                <li><a ng-href="#" target="_blank" class="uk-link-muted" href="#">Отображение элементов меню</a></li>
                <li><a ng-href="#" target="_blank" class="uk-link-muted" href="#">Создание выпадающего меню</a></li>
                <li><a href="#" class="uk-text-small">ещё...</a></li>
            </ul>
        </div>

        <div class="uk-width-4-5">
            <div class="uk-panel uk-panel-content-box">
                <div class="uk-panel-content-box-title">
                    <h2 class=" uk-margin-remove uk-text-bold">Добавление меню</h2>
                    <a href="#" class="uk-panel-content-box-breadcrumb uk-text-muted"><i class="uk-icon-long-arrow-left"></i> Вернуться</a>
                </div>
                <div class="uk-panel-content-box-body">
                    <fieldset class="uk-form uk-form-horizontal uk-margin-large-bottom">
                        <span class="uk-form-counter">1</span>
                        <legend class="uk-form-title uk-text-bold">Основные данные</legend>

                        <div class="uk-form-row">
                            <label class="uk-form-label" for="form-h-it">Название</label>
                            <div class="uk-form-controls">
                                <input type="text" id="name" class="uk-form-large uk-form-large-text uk-width-1-2" name="name" placeholder="Название меню" data-role-input>
                                @*<p class="uk-margin-small-top">
                                        Транслит: <span class="uk-text-muted uk-link-dotted">proverochnaya_stranica</span>
                                    </p>*@
                            </div>
                        </div>
                        @*<div class="uk-form-row">
                                <label class="uk-form-label" for="form-h-it">Alias</label>
                                <div class="uk-form-controls">
                                    <input type="text" id="form-h-it" class="uk-form-large uk-form-large-text uk-width-1-2" placeholder="Nazvanie_na_translite">
                                </div>
                            </div>*@
                    </fieldset>

                    <fieldset class="uk-form uk-form-horizontal">
                        <span class="uk-form-counter">2</span>
                        <legend class="uk-form-title uk-text-bold">Тип меню</legend>

                        <div class="uk-form-row">
                            <label class="uk-form-label" for="form-h-it">Тип меню</label>
                            <div class="uk-form-controls">
                                <select class="uk-margin-small-top uk-form-large uk-form-large-text uk-width-1-2" data-role-changepagetype>
                                    <option value="PageMenuItem">Текстовая страница</option>
                                    <option value="LinkMenuItem">Ссылка</option>
                                </select>
                                <i class="uk-margin-left uk-icon-question uk-icon-mini uk-questions" data-uk-tooltip title="Ознакомиться со всеми типами меню можно в справочнике, который находится слева."></i>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset id="LinkMenuItem" class="uk-form uk-form-horizontal uk-margin-large-bottom" style="display: none;">
                        <span class="uk-form-counter">3</span>
                        <legend class="uk-form-title uk-text-bold">Основные данные</legend>

                        <div class="uk-form-row">
                            <label class="uk-form-label" for="form-h-it">Введите ссылку</label>
                            <div class="uk-form-controls">
                                <input type="text" id="link" class="uk-form-large uk-form-large-text uk-width-1-2" placeholder="ссылка" data-role-input name="link">
                                @*<p class="uk-margin-small-top">
                                        Транслит: <span class="uk-text-muted uk-link-dotted">proverochnaya_stranica</span>
                                    </p>*@
                            </div>
                        </div>
                        @*<div class="uk-form-row">
                                <label class="uk-form-label" for="form-h-it">Alias</label>
                                <div class="uk-form-controls">
                                    <input type="text" id="form-h-it" class="uk-form-large uk-form-large-text uk-width-1-2" placeholder="Nazvanie_na_translite">
                                </div>
                            </div>*@
                    </fieldset>
                    <fieldset id="PageMenuItem" class="uk-form uk-form-horizontal uk-margin-large-bottom">
                        <span class="uk-form-counter">3</span>
                        <legend class="uk-form-title uk-text-bold">Выберите страницу</legend>

                        <div class="uk-form-row">
                            <label class="uk-form-label" for="form-h-it">Название</label>
                            <div class="uk-form-controls">
                                <div class="uk-search">
                                    <input class="uk-search-field" type="search" placeholder="">
                                </div>
                            </div>
                        </div>
                        @*<div class="uk-form-row">
                                <label class="uk-form-label" for="form-h-it">Alias</label>
                                <div class="uk-form-controls">
                                    <input type="text" id="form-h-it" class="uk-form-large uk-form-large-text uk-width-1-2" placeholder="Nazvanie_na_translite">
                                </div>
                            </div>*@
                    </fieldset>

                </div>

                <hr />

                <div class="uk-margin-bottom uk-margin-left uk-text-center">
                    <input type="submit" class="uk-text-bold uk-button uk-button-reviews uk-button-save uk-width-1-3" value="Сохранить" data-role-save-button>
                    <a href="#" class="uk-text-muted uk-margin-left">отменить</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        App.owner = "@Model.RouteID";
        $(function () {
            var view = new window.MenuEdit();
            view.render();
        })
    </script>

}
